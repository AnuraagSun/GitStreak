{
  "manifest_version": 3,
  "name": "GitStreak",
  "version": "1.0",
  "description": "Maintain your GitHub streak by committing daily text or random C code.",
  "permissions": [
    "storage",
    "alarms",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon48",
    "128": "icon128.png"
  }
}
